import java.util.*;
class Palindrome1
{  
 public static void main(String args[])
 {
  int rev=0,rem,no;
  Scanner sc=new Scanner(System.in);
   System.out.println("enter the number");
    no=sc.nextInt();
    int x=no;
    while(no!=0)
     {
       rem=no%10;
       rev=rev*10+rem;
       no=no/10;
     }
    if(x==rev)
    {
       System.out.println(x+"is a palindrome");
    }
    else
    {
         System.out.println(x+"is not a palindrome");
    }
  }
}
